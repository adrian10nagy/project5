
@if (!Project5.WebSite.Helpers.BaseMVC.IsLoggedIn())
{
    <div id="loginContainer">
        <a href="#" id="loginButton">Contul meu</a>
        <div id="loginBox">
            @using (Html.BeginForm("Login", "User", FormMethod.Post, new { enctype = "multipart/form-data", id = "loginForm" }))
            {
                <fieldset id="body">
                    <fieldset>
                        <label for="loginUserEmail">Email Address</label>
                        <input type="text" name="loginUserEmail" id="loginUserEmail">
                    </fieldset>
                    <fieldset>
                        <label for="loginUserPassword">Password</label>
                        <input type="password" name="loginUserPassword" id="loginUserPassword">
                    </fieldset>
                    <input type="submit" id="btnUserLogin" value="Logare">
                    <label for="checkbox"><input type="checkbox" id="checkbox"> <i>Remember me</i></label>
                </fieldset>
                <span><a href="#">Am uitat parola</a></span>
            }
        </div>
    </div>
}
else
{
    <div class="dropdown">
        <p class="dropdown-toggle" id="dropdownMenu1" data-toggle="dropdown">
            Welcome, @Project5.WebSite.Helpers.BaseMVC.User.FirstName!
            <span class="caret"></span>
        </p>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
            <li><a href="#">@Html.ActionLink("My profile", "Profile", "User", null, null)</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">@Html.ActionLink("Delogheaza-te", "Logout", "User", new { @class = "loginNavbar" }, null)</a></li>
        </ul>
    </div>
}
